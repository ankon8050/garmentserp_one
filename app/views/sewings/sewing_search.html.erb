     <%= form_for(:sewings, url: sewing_search_sewings_path, method: :post) do |f| %>

      <div class="col s6">
          <label> Buyer ID</label>
      <%= f.select :buyer_id, options_for_select(@buyer_profiles.collect{|bp| [bp.buying_house_name, bp.buyer_id]}) %>
      </div>


      <div class="col s6">
          <label> Lot ID</label>
    <%= f.select :lot_id, options_for_select(@lots.collect{|l| [l.lot_number, l.lot_id]}), {}, {"data-option-dependent" => true, "data-option-observed" => "sewings_buyer_id","data-option-url"  => "/sewings/get_buyer_profile_lots.json?buyer_id=:sewings_buyer_id", "data-option-key-method"  => :lot_id, "data-option-value-method" => :lot_number, 
