      "data-option-key-method" => :style_no, "data-option-value-method" => :style_no,
 } %>
      </div>

     <div class="col s6">
      <label> Product Name</label>
    <%= f.select :product_name, options_for_select(@product_name.collect{|p| [p.product_name, p.product_name]}), {}, {"data-option-dependent" => true, "data-option-observed" => "sewings_style_no","data-option-url"  => "/sewings/get_buyer_profile_product_name.json?style_no=:sewings_style_no", "data-option-key-method"  => :product_name, "data-option-value-method" => :product_name, 
      "data-option-key-method" => :product_name, "data-option-value-method" => :product_name,
 } %>
      </div>
     
     
      <%= f.submit "Search" , :class => "btn btn-primary" %>
